<!doctype html>
<html class="no-js" lang="">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <title></title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <link rel="stylesheet" href="css/bootstrap.min.css">
        <style>
            body {
                padding-bottom: 20px;
            }
        </style>
        <link href='https://fonts.googleapis.com/css?family=Roboto' rel='stylesheet' type='text/css'>
        <link rel="stylesheet" href="css/bootstrap-theme.min.css">
        <link rel="stylesheet" href="css/main.css">

        <!--[if lt IE 9]>
            <script src="//html5shiv.googlecode.com/svn/trunk/html5.js"></script>
            <script>window.html5 || document.write('<script src="js/vendor/html5shiv.js"><\/script>')</script>
        <![endif]-->
    </head>
    <body>
    <nav class="navbar navbar-inverse navbar-static-top" role="navigation">
      <div class="container branding-header">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">My books</a>
        </div>
      </div>
      <div class="container">
        <div id="navbar" class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            {{#books}}
              <li><a href="#">{{title}}</a></li>
            {{/books}}
            {{#feeds}}
              <li><a href="#">{{title}}</a></li>
            {{/feeds}}
          </ul>
        </div><!--/.navbar-collapse -->
      </div>
    </nav>

    <div class="container">
      <div class="container">
        {{#showWelcomeMessage}}
          <div class="row">
            <div class="col-xs-10 col-sm-6 col-md-3">
              <div class="panel panel-default">
                <div class="panel-body caption">
                  <h3>Welcome back!</h3>
                  <p>Its been a while</p>
                  <p>Read any new books lately?</p>
                </div>
                <div class="panel-footer">
                  <a href="#">No</a>
                  <a class="a-primary" href="#">Yes</a>
                </div>
              </div>
            </div>
          {{/showWelcomeMessage}}
          {{#feeds}}
            <div class="col-xs-10 col-sm-6 col-md-3">
              <div class="panel panel-default">
                <div class="panel-thumbnail img-overlay">
                  <img src="{{cover.img}}"class="img-responsive">
                  <p class="post-content">Top 10 Australian Beaches</p>
                </div>
                <div class="panel-body caption">
                  <p>Some kind of descripion, some kind of description</p>
                </div>
                <div class="panel-footer">
                  <a href="#">No</a>
                  <a class="a-primary" href="#">Yes</a>
                </div>
              </div>
            </div>
          {{/feeds}}
          {{#books}}
            <div class="col-xs-10 col-sm-6 col-md-4">
              <div class="panel panel-default">
                <img src="{{cover.img}}" class="img-responsive img-float-left">
                <div class="panel-body caption no-bottom-padding">
                  <h3>{{title}}</h3>
                  <p>by {{author.firstName}} {{author.lastName}}</p>
                </div>
                <div class="panel-footer">
                  <a href="/{{id}}/freeSample">Free sample</a>
                  <a class="a-primary" href="/{{id}}/review">Review</a>
                </div>
              </div>
            </div>
          {{/books}}

        </div><!--/row-->
      </div><!--/container -->

      <hr>

      <footer>
      </footer>
    </div> <!-- /container -->

        <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.js"></script>
        <script>window.jQuery || document.write('<script src="js/vendor/jquery-1.11.2.js"><\/script>')</script>

        <script src="js/vendor/bootstrap.min.js"></script>

        <script src="js/main.js"></script>
    </body>
</html>
